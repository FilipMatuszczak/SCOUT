<!DOCTYPE html>
<html>
<head>


    {% block stylesheets %}
        <link href="{{ asset('web/styles/profile.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('web/styles/style.css') }}" rel="stylesheet" type="text/css"/>
    {% endblock %}


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <meta charset="utf-8">
    <script src="https://unpkg.com/react/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/babel-standalone/babel.js"></script>

    <title>S COUT</title>
</head>
<body>
<header>
    <div class="header-tab">
        <a class="alogo" href="{{ path('main') }}">Główna</a></div>
    <div class="header-tab">
        <a class="alogo" href="/projects.html">Projekty</a></div>
    <div class="header-tab">
        <a class="alogo" href="/users.html">Użytkownicy</a></div>


    <div id="search-tab" class="header-tab">
        <form action="/action_page.php">
            <input id="searchbar" type="text" placeholder="Search..." name="search">

        </form>
    </div>

</header>

<div class="row">

    <div class="columnLeft">
        <div id="ilogo">
            <a href="{{ path('main') }}"><img src="{{ asset('web/images/logov22.png') }}"></a>
        </div>

        <div id="navigation">
            <a href="{{ path('user_profile', {'username': app.user.username}) }}"><img id="navigation-avatar" src="{{ asset('web/images/krowa.jpg') }}" width="100"
                                         height="100"></a>

            <button class="navico"><i class="fa fa-suitcase"></i></button>
            <button class="navico"><i class="fa fa-users"></i></button>
            <button class="navico"><i class="fa fa-envelope"></i></button>
            <button class="navico"><i class="fa fa-cog"></i></button>
            <button class="navico"><i class="fa fa-ellipsis-v"></i></button>

            <p class="anavig">Witaj, {{ app.user.username }} <br>
                Wyloguj się</p>
        </div>
    </div>

    <div class="columnRight">
        <div id="contents">
            <div id="profile">
                <div class="profile-left">
                    <img id="profile-picture" src="{{ asset('web/images/krowa.jpg') }}" width="230" height="280">
                </div>

                <div class="profile-right">
                    <p id="name-profile">{{ user.firstname }} {{ user.lastname }}</p>
                    <p>wiek : {{ age }} </p>
                    {% for city in user.city %}
                        <li>{{ city.name }}</li>
                    {% endfor %}
                    <hr>
                    <p>jezyki obce</p>
                    {% for language in user.language %}
                        <li>{{ language.name }}</li>
                    {% endfor %}
                    <hr>
                    <p>Technologie</p>
                    {% for technology in user.technology %}
                        <li>{{ technology.name }}</li>
                    {% endfor %}
                    <hr>
                    About me
                    <p>{{  user.info }}</p>
                </div>
            </div>
            <button class="navico" id="message-ico"><i class="fa fa-envelope"></i> Wyślij wiadomość</button>

            {% if user.username == app.user.username %}
            <div class="form-post">
                <img id="post-avatar" src="{{ asset('web/images/krowa.jpg') }}" width="70" height="70">
                <form action="{{ path('create_wall_post') }}" method="post">
                        <input type="text" name="text" class="form-control" required>
                        <input type="hidden" name="username" value={{ app.user.username }}>
                        <input type="submit" id="button-rem" class="button-post" value="Opublikuj"><br>

                </form>
            </div>
            {% endif %}
            {% for post in posts %}
                <div class="comment">
                    <a href="{{ path('user_profile', {'username': user.username}) }}"><img id="comment-avatar" src="{{ asset('web/images/kot.jpg') }}" width="70" height="70"></a>

                    <p class="project-title" href="{{ path('user_profile', {'username': user.username}) }} ">{{ user.firstname }} {{ user.lastname }}</p> - {{ post.timestamp.format('Y-m-d H:i:s') }}
                    <p class="comment-content">{{  post.text}}</p>
                </div>
            {% endfor %}



        </div>
    </div>
</div>


<script src="{{ asset('web/scripts/main.js') }}"></script>

</body>
</html>