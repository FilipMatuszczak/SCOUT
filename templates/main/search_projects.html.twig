
{% extends 'main/parent.html.twig' %}


    {% block stylesheets %}
        <link href="{{ asset('web/styles/search_projects.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('web/styles/style.css') }}" rel="stylesheet" type="text/css"/>
        <script src="{{ asset('web/scripts/jquery-3.4.1.min.js') }}"></script>
        
    {% endblock %}

{% block left %}
    <form action="{{ path('projectcs_main') }}" method="get">

<div class="filter">
        <div class="title">Filtruj projekty</div>
        
        <hr><div class="bio-title">
        Tytuł  
        <input class="bio" type="text" size="30" name="title" id="inputTitle" placeholder="..." value="{{ title }}"> </div>
        <br>
        
        <div class="bio-title">
        Członek
          <input type="text" name="member" class="bio" placeholder="..."   maxlength="50" id="lang" value="{{ member }}">
           
    <input type="hidden" name="page" value={{ page }}>
    </div>
        <br>
        
       <div class="bio-title">
        Technologia  
        <input type="TechList" class="bio" name="technology" id="tech" placeholder="..." maxlength="50" list="TechList" value={{ technology }}>
            <datalist id="TechList">

            </datalist>
        </div>
    <br>
       
    
        <hr>
    <div class="sort">
        Sortuj według: 
    
    <select name="sorting">

    <option value="Najnowsze">Najnowsze</option>
    <option value="Najstarsze">Najstarsze</option>
    <option value="A-Z">A-Z</option>
    <option value="Z-A">Z-A</option>
        <option selected="selected">{{ sorting }}</option>
  </select>
    <br>
    <div class="btn-search">
        <input type="submit" id="upload"/>
        </div>
        </div>
</div>
    </form>
{% endblock %}


{% block body %}


    {%  for project in projects %}
        <div class="post">
            <a href=""><img id="project-avatar" src="data:image/jpeg;base64,{{  photo_data_provider.getPhotoByProjectTitle(project.title) }}" width="70" height="70"></a>
            <a class="project-title" href=" ">{{ project.title }}</a><br>
            {%  for technology in project.technology %}
                <a class="project-lang" href=" ">{{ technology.name }}</a>
            {% endfor %}
        </div>
        
    {% endfor %}

<div class="pagination">
           <button class="pagination-button prev"><i class="fa fa-long-arrow-left"></i></button>
            
    <div style="display: inline-block; 
    margin-top: 5px;">
            <a class="pagination-a" href="#">1</a>
         </div>   
            <button class="pagination-button next"><i class="fa fa-long-arrow-right"></i></button>
        </div>
    
    <script src="{{ asset('web/scripts/edit-profile.js') }}"></script>
   
    
{% endblock %}